<script>
  Vue.component("settings-window", {
    template: "#settings-window",
    data: function() {
      return {
        app: this.$root,
        themes: ipcRenderer.sendSync("get-themes"),
        tabIndex: 0,
        canChangeHash: false,
        lastfmConnecting: false
      }
    },
    watch: {
      tabIndex: function(val) {
        if (this.canChangeHash) {
